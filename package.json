{
  "name": "react-advanced-keyboard",
  "version": "1.0.0",
  "description": "A highly configurable React virtual keyboard component with autocomplete functionality, multiple layouts, and platform-specific customization",
  "type": "module",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    },
    "./styles": "./dist/react-advanced-keyboard.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "vite build --mode lib",
    "preview": "vite preview",
    "lint": "eslint src/components src/hooks src/types.ts src/utils.ts src/layouts.ts src/index.ts --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm run type-check && pnpm run lint && pnpm run build",
    "postpublish": "echo 'Package published successfully! ðŸŽ‰'"
  },
  "keywords": [
    "react",
    "virtual-keyboard",
    "keyboard",
    "autocomplete",
    "input",
    "typescript",
    "component",
    "ui",
    "accessibility",
    "qwerty",
    "azerty",
    "tailwind",
    "keyboard-layouts",
    "virtual-input"
  ],
  "author": "plinsy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plinsy/react-advanced-keyboard.git"
  },
  "bugs": {
    "url": "https://github.com/plinsy/react-advanced-keyboard/issues"
  },
  "homepage": "https://github.com/plinsy/react-advanced-keyboard#readme",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react-router-dom": "^7.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4"
  }
}
